%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], style: :horizontal, left: "col-sm-3" , right: "col-sm-6", html: {multipart: true} do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
            %li
              = link_to "All Videos", admin_videos_path
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_category
            = f.text_area :description, rows: 8
            = f.file_field :large_cover, class: 'btn-file'
            = f.file_field :small_cover, class: 'btn-file'

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
