%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @leaderships.each do |leadership|
        %tr
          %td.pull-left
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(leadership.leader_email.downcase)}?s=40")
            = link_to leadership.leader_full_name, user_path(leadership.user_id)
          %td.extra-padding= leadership.leader_queue_items.count
          %td.extra-padding= leadership.followers.count
          %td.extra-padding
            = link_to followership_path(leadership.id), method: :delete do
              %i.glyphicon.glyphicon-remove
