%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_for @invitation, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        .row
          .col-sm-4
            = f.text_field :full_name, label: "Friend's Name", required: true
        .row
          .col-sm-4
            = f.email_field :email, label: "Friend's Email Address", required: true
        .row
          .col-sm-6
            = f.text_area :message, rows: 6, label: "Invitation Message", value: "Please join this really cool site!"
            = f.submit "Send Invitation", class: 'btn btn-default'

