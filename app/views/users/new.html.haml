
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, html: { class: 'form-horizontal' } do |f|
        %header
          %h1 Register
        = render 'shared/form_error', object: @user
        %fieldset
          .form-group
            = f.label :full_name, class: 'control-label col-sm-3'
            .col-sm-6
              = f.text_field :full_name, class: 'form-control'
          .form-group
            = f.label :email, class: 'control-label col-sm-3'
            .col-sm-6
              = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password, class: 'control-label col-sm-3'
            .col-sm-6
              = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, "Confirm Password", class: 'control-label col-sm-3'
            .col-sm-6
              = f.password_field :password_confirmation, class: 'form-control'
        %fieldset.actions.control-group.col-sm-offset-4
          .controls
            = f.submit "Sign Up", class: "btn btn-default"
