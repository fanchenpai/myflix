
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, style: :horizontal, left: "col-sm-3" , right: "col-sm-6" do |f|
        %header
          %h1 Register
        /= render 'shared/form_error', object: @user
        = f.text_field :full_name
        = f.email_field :email
        = f.password_field :password, help: "Must be at least 3 characters long"
        = f.password_field :password_confirmation, label: "Confirm Password"
        %fieldset.actions.control-group.col-sm-offset-4
          .controls
            = f.submit "Sign Up"

