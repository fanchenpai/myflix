%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, url: sessions_path, html: { class: 'sign_in' } do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = f.label :email, "Email Address"
            .row
              .col-sm-4
                = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password
            .row
              .col-sm-4
                = f.password_field :password, class: 'form-control'
        %fieldset.form-group.action
          = f.submit "Sign In", class: "btn btn-default"
